datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  USER
}

enum TipoPersona {
  JURIDICA
  FISICA
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clients   Client[]
}

model Client {
  id          String      @id @default(cuid())
  userId      String
  razonSocial String
  cuit        String?
  tipoPersona TipoPersona?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([razonSocial])
  @@unique([userId, cuit])
}
