datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  USER
}

enum TipoPersona {
  JURIDICA
  FISICA
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clients  Client[]
  accounts Account[] // ðŸ‘ˆ opcional pero recomendado (cuentas propias por user)
}

model Client {
  id          String       @id @default(cuid())
  userId      String
  razonSocial String
  cuit        String?
  tipoPersona TipoPersona?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  accounts Account[] // ðŸ‘ˆ RELACIÃ“N INVERSA NECESARIA

  @@unique([userId, cuit])
  @@index([userId])
  @@index([razonSocial])
}

enum AccountType {
  CLIENT
  CASH
  BANK
  INCOME
}

model Account {
  id       String      @id @default(cuid())
  userId   String
  name     String
  type     AccountType
  isActive Boolean     @default(true)

  // Si la cuenta es CLIENT, puede vincularse a un cliente
  clientId String?
  client   Client? @relation(fields: [clientId], references: [id]) // âœ… sin Cascade

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@unique([userId, clientId])
  @@index([userId, type])
}
